{# add stimulus controller for title? #}
<ons-page id="{{ block('pageId')|default('no-id') }}">

    {% set toolbarContent = block('toolbar')|default(false) %}
    {% if toolbarContent %}
    <ons-toolbar>
        {% block toolbar %}
        <div class="left">
            {# issue with font not loading #}
            <ons-back-button></ons-back-button>
        </div>
        {% endblock %}
    </ons-toolbar>
    {% endif %}

    <div>
        {% block body %}
        This is the about page, served from twig.  {{ 'now'|date }}
        {% endblock %}
    </div>
</ons-page>
